@model project.Models.category_T

@{
    ViewBag.Title = "Categorys";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}

<h2>ADD Categorys</h2>

@using (Html.BeginForm("Categorys","Ourservices",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Category Name</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.cat_title, new { htmlAttributes = new { @class = "form-control",required="required" } })
               
            </div>
        </div>

        <div class="form-group" >
            <label class="col-sm-2 col-sm-2 control-label">Discription</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.cat_discrip, new { htmlAttributes = new { @class = "form-control",required="required" } })
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <button type="submit" class="btn btn-theme"><i class="fa fa-check" > Add Cotegory  </i></button>
            </div>
        </div>
        <hr>
    </div>
}

<div class="btn btn-warning btn-xs">
    <i class="fa fa-arrow-left">   @Html.ActionLink("Back to Categorys", "Index", "OurCategory")</i>
</div>
