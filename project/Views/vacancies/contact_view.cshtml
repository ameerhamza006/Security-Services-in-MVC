@model IEnumerable<project.Models.contact>

@{
    ViewBag.Title = "contact_view";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}
<h3><i class="fa fa-angle-right"></i> Who Contact With Us</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">

            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                                           <th> Name</th>
                                            <th>Email</th>
                            <th class="numeric">Number</th>
                            <th class="numeric">Message</th>  
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td> @Html.DisplayFor(modelItem => item.name)</td>
                                <td class="numeric"> @Html.DisplayFor(modelItem => item.email)</td>
                                <td class="numeric"> @Html.DisplayFor(modelItem => item.number)</td>
                                <td class="numeric"> @Html.DisplayFor(modelItem => item.message)</td>    
                                <td>
                                    @if (User.IsInRole("admin"))
                                    { 
                                    <div class=" btn btn-danger btn-xs"><i class="fa fa-trash-o">  @Html.ActionLink("Delete", "delete_contact", new { id = item.id })</i>  </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tbody></tbody>
                </table>
            </section>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-lg-4 -->
</div>


