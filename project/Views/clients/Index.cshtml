@model IEnumerable<project.Models.client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}



<h3><i class="fa fa-angle-right"></i> Clients Details</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            @if(User.IsInRole("admin"))
            { 
            <h4 class="btn btn-warning"> @Html.ActionLink("Add New", "Create")</h4>
            }
            <div class="text-center"> </div>
            <hr />
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>

                            <th>Name</th>
                            <th>Email</th>
                            <th class="numeric">ServiceAvaild</th>
                            <th class="numeric">StaffAssaint</th>

                            <th class="numerics">Message</th>
                            <th></th>
                            <th></th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td> @Html.DisplayFor(modelItem => item.client_name)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.client_email)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.category_T.cat_title)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.service.ser_title)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.client_msg)</td>

                            @if(User.IsInRole("admin"))
                            { 
                            <td>
                                <div class=" btn btn-danger btn-xs"><i class="fa fa-trash-o">   @Html.ActionLink("Delete", "Delete", new { id = item.client_id })</i>  </div>
                            </td>
                            <td>
                                <div class=" btn btn-primary btn-xs"><i class="fa fa-pencil">  @Html.ActionLink("Edit", "Edit", new { id = item.client_id }) </i>  </div>
                            </td>
                            }
                            <td>

                                <div class=" btn btn-success btn-xs"><i class="fa fa-check">   @Html.ActionLink("Details", "Details", new { id = item.client_id })</i>  </div>

                            </td>
                        </tr>
                        }
                    </tbody>
                    <tbody></tbody>

                </table>
            </section>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-lg-4 -->
</div>




