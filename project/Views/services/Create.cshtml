@model project.Models.service

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}

<h2>Add Service</h2>

@using (Html.BeginForm("Create", "services", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Select Category</label>
            <div class="col-md-10">
                @Html.DropDownList("ser_fk_cat", null, "--Select--", new { @class = "form-control" })

            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Service Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ser_title, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Discription 1 </label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ser_discrip, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Photo  </label>
            <div class="col-md-10">
                <input type="file" name="img" class="form-control" required="required" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Discription 2 </label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ser_discrip_2, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Service" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="btn btn-warning btn-xs">
    @Html.ActionLink("Back to List", "Index")
</div>


