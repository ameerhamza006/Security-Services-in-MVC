@model IEnumerable<project.Models.service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}


<h3><i class="fa fa-angle-right"></i> Service Details</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            @if(User.IsInRole("admin"))
            { 
            <h4 class="btn btn-warning"> @Html.ActionLink("Add New", "Create")</h4>
            }
            <div class="text-center"> </div>
            <hr />
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>

                            <th>Name</th>
                            <th>Discription (1)</th>
                            <th class="numeric">Images (1)</th>
                            <th class="numeric">Discription (2)</th>

                            <th class="numerics">Categorys</th>
                            <th></th>
                            <th></th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td> @Html.DisplayFor(modelItem => item.ser_title)</td>
                                <td class="numeric"> @Html.DisplayFor(modelItem => item.ser_discrip)</td>
                                <td><img src="~/Servicesimages/@Url.Content(item.ser_img)" class="img-rounded" width="100" height="100" /></td>
                                <td class="numeric"> @Html.DisplayFor(modelItem => item.ser_discrip_2)</td>

                                <td class="numeric"> @Html.DisplayFor(modelItem => item.category_T.cat_title)</td>
                                @if(User.IsInRole("admin"))
                                { 
                                <td>
                                    <div class=" btn btn-danger btn-xs"><i class="fa fa-trash-o">   @Html.ActionLink("Delete", "Delete", new { id = item.ser_id })</i>  </div>
                                </td>
                                <td>
                                    <div class=" btn btn-primary btn-xs"><i class="fa fa-pencil">  @Html.ActionLink("Edit", "Edit", new { id = item.ser_id }) </i>  </div>
                                </td>
                                }

                                <td>
                                    <div class=" btn btn-success btn-xs"><i class="fa fa-check">   @Html.ActionLink("Details", "Details", new { id = item.ser_id })</i>  </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                    <tbody></tbody>

                </table>
            </section>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-lg-4 -->
</div>






