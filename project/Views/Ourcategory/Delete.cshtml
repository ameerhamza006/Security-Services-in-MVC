@model project.Models.category_T

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}

<h2 class="text-center">Category</h2>

<h3 class="text-center">Are you sure you want to delete this Category ?</h3>
<div class="content-panel text-center">

    <hr>
    <h4 class="title"> @Html.DisplayFor(model => model.cat_title)  </h4>
    <p> @Html.DisplayFor(model => model.cat_discrip) </p>
    <hr>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <div class="btn btn-warning btn-xs">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    }
</div>
