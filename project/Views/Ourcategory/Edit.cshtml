@model project.Models.category_T

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}

    <h2>Edit Category</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.cat_id)

        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Name :</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.cat_title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cat_title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Discription :</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.cat_discrip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cat_discrip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-warning" />
            </div>
        </div>
        <hr />
    </div>
}

<div class="btn btn-warning btn-xs">
    @Html.ActionLink("Back to Categorys", "Index")
</div>
