@model IEnumerable<project.Models.PKG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}


<h3> Packages Details</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            @if(User.IsInRole("admin"))
            { 
            <h4 class="btn btn-warning"> @Html.ActionLink("Add New", "Create")</h4>
            }
            <div class="text-center"> @ViewBag.messagen  @ViewBag.messagenn </div>
            <hr />
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>

                            <th>Name</th>
                            <th>Price</th>
                            <th class="numeric">Pkg 1</th>
                            <th class="numeric">Pkg 2</th>
                            <th class="numeric">Pkg 3</th>
                            <th class="numerics">Pkg 4</th>
                            <th class="numerics">Pkg 5</th>
                            <th class="numerics">Pkg 6</th>
                            <th></th>
                            <th></th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td> @Html.DisplayFor(modelItem => item.p_title)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.p_price)</td>

                            <td class="numeric"> @Html.DisplayFor(modelItem => item.p_1)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.p_2)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.p_3)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.p_4)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.p_5)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.p_6)</td>
                            @if(User.IsInRole("admin"))
                            { 
                            <td>
                                <div class=" btn btn-danger btn-xs"><i class="fa fa-trash-o">   @Html.ActionLink("Delete", "Delete", new { id = item.P_id })</i>  </div>
                            </td>
                            <td>
                                <div class=" btn btn-primary btn-xs"><i class="fa fa-pencil">  @Html.ActionLink("Edit", "Edit", new { id = item.P_id }) </i>  </div>
                            </td>
                            }
                            <td>



                                <div class=" btn btn-success btn-xs"><i class="fa fa-check">   @Html.ActionLink("Details", "Details", new { id = item.P_id })</i>  </div>


                            </td>
                        </tr>
                        }
                    </tbody>
                    <tbody></tbody>

                </table>
            </section>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-lg-4 -->
</div>






















