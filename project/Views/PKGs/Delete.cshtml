@model project.Models.PKG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}

<h2>Package</h2>

<h3>Are you sure you want to delete this Package?</h3>
<div>

    <hr />
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <div class="custom-box">
                    <div class="servicetitle">
                        <h4> @Html.DisplayFor(model => model.p_title)</h4>
                        <hr>
                    </div>
                    <div class="icn-main-container">
                        <span class="icn-container"> @Html.DisplayFor(model => model.p_price)</span>
                    </div>
                    <p></p>
                    <ul class="pricing">
                        <li> @Html.DisplayFor(model => model.p_1)</li>
                        <li> @Html.DisplayFor(model => model.p_2)</li>
                        <li> @Html.DisplayFor(model => model.p_3)</li>
                        <li> @Html.DisplayFor(model => model.p_4)</li>
                        <li> @Html.DisplayFor(model => model.p_5)</li>
                        <li> @Html.DisplayFor(model => model.p_6)</li>
                        <li></li>
                    </ul>

                </div>
                <!-- end custombox -->
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <div class="btn btn-warning btn-xs">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>

    }
    <hr>
</div>
