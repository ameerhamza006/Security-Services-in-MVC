@model IEnumerable<project.Models.employe_Reg>

@{
    ViewBag.Title = "employee_edit";
    Layout = "~/Views/shared/AdminMaster.cshtml";
}

<h3> Employee Details</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            @if(User.IsInRole("admin"))
            { 
            <h4 class="btn btn-warning"> @Html.ActionLink("Add New", "add_employee")</h4>
            }
            <hr />
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Profile</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th class="numeric">Role</th>
                            <th class="numeric">Department</th>
                            <th class="numeric">Client</th>
                            <th class="numeric">Grade</th>
                            <th class="numeric">Education</th>
                            <th class="numeric">Achievement</th>
                            <th class="numeric">Email</th>
                            <th class="numeric">Number</th>
                            <th class="numeric">Address</th>
                            @if(User.IsInRole("admin"))
                            { 
                            <th class="numeric">Password</th>
                            }
                            <th></th>
                           

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td> <a href="@Url.Action("Details","Employee",new { id = item.reg_id_code })"> <img src="~/EmpImages/@Url.Content(item.reg_img)" class="img-circle" width="50" height="50" /></a></td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.code)</td>
                            <td> @Html.DisplayFor(modelItem => item.reg_name)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.reg_role)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.reg_depart)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.reg_client)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.reg_grade)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.reg_education)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.reg_achieve)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.reg_email)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.reg_number)</td>
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.reg_address)</td>
                            @if(User.IsInRole("admin"))
                            { 
                            <td class="numeric"> @Html.DisplayFor(modelItem => item.password)</td>
                            }
                            <td>
                                @if(User.IsInRole("admin"))
                                { 
                                <div class=" btn btn-danger btn-xs">  @Html.ActionLink("Delete", "delete_reg", new { id = item.reg_id_code })  </div>
                                <div class=" btn btn-primary btn-xs">  @Html.ActionLink("Edit", "edit", new { id = item.reg_id_code })   </div>
                                }
                                <div class=" btn btn-success btn-xs">   @Html.ActionLink("Details", "Details", new { id = item.reg_id_code }) </div>

                            </td>
                            
                           
                        </tr>
                        }
                        </tbody>
                    <tbody></tbody>
                </table>
            </section>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-lg-4 -->
</div>
